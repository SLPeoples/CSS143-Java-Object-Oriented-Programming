
public class Test {
	public static void main(String args[]){
		writeSquares(5);
		System.out.println();
		writeSquares(1);
		System.out.println();
		writeSquares(8);
	}
	public static void writeSquares(int n){
		String re = "";
		int store;
		if(n%2==1)
			store = (n-1);
		else
			store = n;
		if(n==1){
			System.out.print(n);
			n-=1;
		}
		while(n>0){
			if(n*n%2 == 1)
				System.out.print(n*n+", ");
			n-=1;
		}
		n+=1;
		while(n<= store){
			if(n == store){
				System.out.print(n*n);
				break;
			}
			if((n*n)%2==0)
				System.out.print(n*n+", ");
			n+=1;
		}
		
			
	}
}
